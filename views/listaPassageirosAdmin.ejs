        <talbe class="center" id="myTable">
            <h1>Lista utilizadores  </h1>
            <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search nome ..." title="Type in nome">
                  <table class="table table-striped ">
                    <thead>
                      <tr>
                        <th scope="col">nº</th>
                        <th scope="col">ID</th>
                        <th scope="col">Nome </th>
                        <th scope="col">Email</th>
                        <th scope="col">telemóvel</th>
                        <th scope="col">Freguesia</th>
                        <th scope="col">nº CC</th>
                      </tr>
                    </thead>
                    <tbody>
                      <%
                      if(userData.length!=0){
                      var i=1;
                      userData.forEach(function(data){
                      %>
                      <tr>
                        <th scope="row"><%=i; %></th>
                        <td><%=data.id; %></td>
                        <td><%=data.name %></td>
                        <td><%=data.email %></td>
                        <td><%=data.telemovel %></td>
                        <td><%=data.freguesia %></td>
                        <td><%=data.CC %></td>
                      </tr>
                      <%  i++; }) %>
                      <% } else{ %>
                          <tr>
                              <td colspan="5">No Data Found</td>
                          </tr>
                      <% } %>
                    </tbody>
                  </table>
          




        <div class="panel-body">
