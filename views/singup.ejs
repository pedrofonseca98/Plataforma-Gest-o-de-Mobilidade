<%- include ("_partial/_header.ejs"); %>
 
<div class="col-md-10">
    <br /> 
    <br /> 
    <br /> 
    <div class="panel panel-default">
 
        <div class="panel-heading" >
            <h3>Sign Up Condutor</h3>
        </div>
        <div class="panel-body">
            <form class="form-signin" method="POST" action="/submitUser">
                <div class="input-group">
                    <span class="input-group-text"> Nome :</span>
                    <input type="text" class="form-control" placeholder="nome" name="name" aria-describedby="basic-addon1" required>
                </div>
                <br />
                <div class="input-group ">
                    <span class="input-group-text"> Email :</span>
                    <input type="email" class="form-control" placeholder="Email" name="email" aria-describedby="basic-addon1" required>
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-text"> Palavra-passe :</span>
                    <input type="password" name="password" class="form-control" placeholder="Passe com pelo menos 6 caracteres" aria-describedby="basic-addon1" minlength="6" maxlength="16" required>
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-text"> Telemóvel :</span>
                    <input type="text" class="form-control" placeholder="telemovel" name="telemovel" aria-describedby="basic-addon1" required> 
                </div>
                <br />  
                <div class="input-group ">
                    <span class="input-group-text "> nº Cartão cidadão :</span>
                    <input type="text" class="form-control" placeholder="CC ou BI" name="CC" aria-describedby="basic-addon1" required>
                </div>
                <br /> 
                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupSelect01">Freguesia</label>
                    <select class="form-select"  name ="freguesia">
                      <option selected>Escolhe...</option>
                      <option value="Alcaide">Alcaide</option>
                      <option value="Alcaria">Alcaria</option>
                      <option value="Alcongosta">Alcongosta</option>
                      <option value="Alpedrinha">Alpedrinha</option>
                      <option value="Barroca">Barroca</option>
                      <option value="Bogas de Cima">Bogas de Cima</option>
                      <option value="Capinha">Capinha</option>
                      <option value="Castelo Novo">Castelo Novo</option>
                      <option value="Enxames">Enxames</option>
                      <option value="Fatela">Fatela</option>
                      <option value="Fundão">Fundão</option>
                      <option value="Janeiro de Cima e Bogas de Baixo">Janeiro de Cima e Bogas de Baixo</option>
                      <option value="Lavacolhos">Lavacolhos</option>
                      <option value="Orca">Orca</option>
                      <option value="Pêro Viseu">Pêro Viseu</option>
                      <option value="Póvoa de Atalaia e Atalaia do Campo">Póvoa de Atalaia e Atalaia do Campo</option>
                      <option value="Silvares">Silvares</option>
                      <option value="Soalheira">Soalheira</option>
                      <option value="Souto da Casa">Souto da Casa</option>
                      <option value="Telhado">Telhado</option>
                      <option value="Três Povos">Três Povos</option>
                      <option value="Vale de Prazeres e Mata da Rainha">Vale de Prazeres e Mata da Rainha</option>
                    </select>
                  </div>
                <br /> 
                <input type="submit" class="btn btn-primary mb-3" value="Sign Up" />
 
            </form>
        </div>
    </div>
</div>

<%- include ("_partial/_footer.ejs"); %>