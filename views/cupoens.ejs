<!DOCTYPE html>
 
<html>
<head>
    <meta charset="utf-8">
    <title>Boleias no Fundão</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
           body {
     background: url("https://i.postimg.cc/KvXQJyws/Serra-da-Gardunha-Munic-pio-do-Fund-o.jpg") no-repeat center center fixed;
       -webkit-background-size: cover;
       -moz-background-size: cover;
       background-size: cover;
       -o-background-size: cover;
   }

   .card{
     box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
     transition: 0.3s;
     border-radius: 15px;
     padding: 20px;
     opacity: 1;
   }
     .panel  {
       border-radius: 5px;
       background-color: #f2f2f2;
       padding: 20px;
       transform: translateX(9%) ;
       opacity: 0.9;
     }     
 </style>
</head>
 
<body>
    

  
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
        <a class="navbar-brand" href="/boleiasteste">Boleias no fundao</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/funcionario">Conta</a>
            </li>  
            <li class="nav-item">
              <a class="nav-link" href="/funBoleiasAceites">Boleias Aceites</a>
          </li>
            <li class="nav-item">
                <a class="nav-link" href="/logout">logout</a>
            </li>
          </ul>
        </div>
        </div>
      </nav>
    



<div class="col-md-10">
  <br /> 
  <br /> 
  <br /> 
  <div class="panel panel-default">
    <div class="container">
    <% if(pontosData.length!=0){ %>
      <%  pontosData.forEach(function(points){ %>

        <h1> Tens <%=points.pontos%> pontos !</h1> 
   
      <% }) %>
      <% } else{ %>    
      <% } %>
      
    </div>
  
   <%
    if(userData.length!=0){
    userData.forEach(function(data,index){
    %>
    <%if(index > 0){   %>
      <%if(data.numeroCupao == userData[index - 1].numeroCupao ){%>
      <%}else{%> 
       
      <div class="container">
      </br>
          <div class="card">
           <h1><%=data.cupao; %> | <%=data.custo; %> pontos</h1>
           <form class="form-signin" method="POST" action="/redimirCupao">
              <div class="input-group ">
              <span class="input-group-text"> ID:</span> 
              <input type="text" class="form-control"  value= "<%=data.id; %>" name="id" aria-describedby="basic-addon1" readonly>
              </div>
           <input type="submit" class="btn btn-primary mb-3" value="Redimir Cupão" />
           </form>  
          </div>
     </div>
       <% }%>
     <% }%>
    <% }) %>
    <% } else{ %>
    <% } %>

</div>
</div>


<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>


</body>
</html>