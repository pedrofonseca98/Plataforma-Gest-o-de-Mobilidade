<div class="container">
  <h2>Lista boleias concluidas </h2>
</div>
        
          <%
          if(userData.length!=0){
          var i=1;
          userData.forEach(function(data){
          %>

          <div class="container">
            <h3>Boleia de <%=data.localinicial; %> para <%=data.localfinal; %> <%=data.data; %> </h3>
                <div class="card">
                 <div class="card bg-light text-dark">
                  <details>
                    <summary>DETALHES</summary>
                 <p> Utilizador : <%=data.name; %> , Telemovél : <%=data.telemovel; %></p> 
                 <p>Dia :20/10 Ida :{ <%=data.horainicial; %> / <%=data.horafinal; %>  }   <%    if( data.localfinal2 != null) {   %> VOLTA :{ <%=data.horainicial2; %> / <%=data.horafinal2; %> }  <% } %></p> 
                 <p> Viagem de Ida  : { <%=data.localinicial; %>  >>  <%=data.localfinal; %> } > <%=data.perm1; %>    </p> 

                 <%    if( data.localfinal2 != null) {   %>
                 <p> Viagem de Regresso : { <%=data.localinicial2; %>  >>  <%=data.localfinal2; %>  } > <%=data.perm2; %>  </p> 
                 <% } %>
                </details>
               
            </div>
            </div>
            </div>
        </br>
          <%  i++; }) %>
          <% } else{ %>
          <% } %>

</div>

